{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.EntityFrameworkCore": "Information",
      "SecuNik.LogX": "Debug"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=Storage/secunik_logx_dev.db"
  },
  "Storage": {
    "RetentionDays": 7,
    "CleanupIntervalHours": 1,
    "MaxFileSize": 536870912,
    "MaxStorageSize": 10737418240
  },
  "OpenAI": {
    "EnableAIAnalysis": true,
    "EnableAIIOCExtraction": true,
    "EnableAIThreatAssessment": true,
    "EnableAISummary": true,
    "TimeoutSeconds": 30
  },
  "VirusTotal": {
    "EnableIntegration": true,
    "RequestDelayMs": 1000,
    "MaxRequestsPerMinute": 60
  },
  "Analysis": {
    "MaxConcurrentAnalyses": 1,
    "DefaultTimeoutMinutes": 10,
    "MaxEventsPerAnalysis": 10000
  }
}